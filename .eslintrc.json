{
    "env": {
        "node": true,
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:vue/vue3-recommended", "prettier"],
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": [
        "web/*",
        "vendor/*",
        "*.min.*"
    ],
    "rules": {
        "no-console": ["error", { "allow": ["warn", "error"] }]
    }
}
